@model EcommerceApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Delete Product</h1>
    
    <div class="alert alert-danger mt-3">
        <h3>Are you sure you want to delete this product?</h3>
    </div>
    
    <div class="card mt-4">
        <div class="card-body">
            <div class="row">                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))                    {                        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-fluid" 
                             onerror="this.onerror=null; this.src='/images/placeholder.jpg';" />
                    }
                    else
                    {
                        <div class="text-center p-3 bg-light">
                            <span>No Image Available</span>
                        </div>
                    }
                </div>
                
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Stock)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Stock)
                        </dd>
                        
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                        
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.IsFeatured)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.IsFeatured)
                        </dd>
                        
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
