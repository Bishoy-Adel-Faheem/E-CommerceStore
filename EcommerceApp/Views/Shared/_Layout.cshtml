<!DOCTYPE html>
<html lang="en" style="overflow-x: hidden;">
<head>    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceApp</title>
    <script type="importmap"></script>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/payment-methods.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcommerceApp.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Toast container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3"></div>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop me-2"></i>EcommerceApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-box-seam me-2"></i>DashBoard</a></li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>
                        }
                    </ul>
                    
                    <div class="d-flex align-items-center">
                        @if (!User.IsInRole("Admin"))
                        {
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary position-relative me-3">
                                <i class="bi bi-cart"></i>
                                <span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        }
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>    </div>

    <footer class="bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row">
                <!-- Store Information -->
                <div class="col-md-3 col-lg-3 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4"><i class="bi bi-shop me-2"></i>EcommerceApp</h5>
                    <p class="mb-3">Your one-stop shop for all your shopping needs with the best prices and quality products.</p>
                    <div class="d-flex">
                        <a href="https://facebook.com" target="_blank" class="text-white me-3 fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="https://twitter.com" target="_blank" class="text-white me-3 fs-5"><i class="bi bi-twitter"></i></a>
                        <a href="https://instagram.com" target="_blank" class="text-white me-3 fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="https://linkedin.com" target="_blank" class="text-white me-3 fs-5"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 col-lg-2 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Home</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Shop" asp-action="Index" class="text-white text-decoration-none">Shop</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="AboutUs" class="text-white text-decoration-none">About Us</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Contact" class="text-white text-decoration-none">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-md-3 col-lg-2 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Customer Service</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="FAQ" class="text-white text-decoration-none">FAQ</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="ShippingInfo" class="text-white text-decoration-none">Shipping Information</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Returns" class="text-white text-decoration-none">Returns Policy</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Privacy Policy</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Terms" class="text-white text-decoration-none">Terms & Conditions</a></li>
                    </ul>
                </div>

                <!-- Contact Information -->
                <div class="col-md-3 col-lg-3">
                    <h5 class="text-uppercase mb-4">Contact Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>123 E-Commerce St, Shopping City</li>
                        <li class="mb-2"><i class="bi bi-telephone me-2"></i>(123) 456-7890</li>
                        <li class="mb-2"><i class="bi bi-envelope me-2"></i>contact@ecommerceapp.com</li>
                        <li class="mb-2"><i class="bi bi-clock me-2"></i>Mon-Fri: 9AM - 6PM</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4">

            <!-- Copyright -->
            <div class="row align-items-center">                <div class="col-md-7 col-lg-8">
                    <p class="mb-md-0">
                        &copy; 2025 EcommerceApp. All rights reserved.
                    </p>
                </div>
                <div class="col-md-5 col-lg-4">
                    <div class="text-md-end">
                        <div class="payment-methods" title="We accept Visa, MasterCard, American Express, PayPal, and Apple Pay"></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Script to hide any unwanted elements after the footer -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Hide any elements that might appear after the footer
            var bodyChildNodes = document.body.childNodes;
            for (var i = 0; i < bodyChildNodes.length; i++) {
                var node = bodyChildNodes[i];
                if (node.nodeType === Node.TEXT_NODE && node.textContent.includes('localhost:7195')) {
                    node.textContent = '';
                }
            }
            
            // Add overflow:hidden to body to prevent any content from spilling out
            document.body.style.overflow = 'hidden auto';
        });
    </script>
</body>
</html>
